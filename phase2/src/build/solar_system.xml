<world> <!-- a world can have a camera, a window definition, and a single group -->
    <window width="512" height="512" />
    <camera mode="static"> 
	    <position x="30" y="10" z="25" />
	    <lookAt x="0" y="0" z="0" />
	    <up x="0" y="1" z="0" /> <!-- optional, use these values as default-->
        <projection fov="60" near="1" far="1000" /> <!-- optional, use these values as default-->
    </camera>

    <!-- SUN -->
    <group>
        <color R="255.0" G="122.0" B="24.0"/>
        <models> 
            <model file="sphere_5_50_50.3d"/> <!-- generator sphere 5 50 50 sphere_5_50_50.3d -->
        </models>   
    </group>

    <group>
        <transform> 
            <translate x="0" y="0" z="-10" />
        </transform>
        <color R="206.0" G="204.0" B="209.0"/>
        <models> 
            <model file="sphere_2_25_25.3d"/> <!-- generator sphere 2 25 25 sphere_2_25_25.3d -->
        </models>  
    </group>
</world>
